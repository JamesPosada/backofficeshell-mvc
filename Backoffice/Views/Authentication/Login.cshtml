@model Backoffice.ViewModels.LoginViewModel  
@{
    ViewBag.Title = "Sign In";
}

<h1>Sign In</h1>
@using(Html.BeginForm())
{                       
    @Html.ValidationSummary(true)
                                   
    <div class="row-fluid">
        <span class="span12">
            @Html.LabelFor(model => model.LoginName, "Username")
            @Html.TextBoxFor(model => model.LoginName, new { placeholder = "Username", @class = "span12" })
        </span>
    </div>

    <div class="row-fluid">
        <span class="span12">
            @Html.LabelFor(model => model.Password, "Password")
            @Html.PasswordFor(model => model.Password, new { placeholder = "Password", @class = "span12" })
        </span>
    </div>
            
    <button type="submit" data-role="button" class="btn"><i class="bootstrap-icon-ok"></i>Sign in</button>
}

<script>
    $(function () {
        var ele = document.getElementById('LoginName');
        var eleP = document.getElementById('Password')
        if (ele.value != "") ele = eleP;
        if (ele) {
            ele.select();
            ele.focus();
        }
    });
</script>
